{
  "name": "@jpglens/mcp-server",
  "version": "0.6.0",
  "private": false,
  "description": "Official MCP server for jpglens: stdio + SSE transports; retries/backoff; pluggable reporters (JSONL, S3); structured issues.",
  "type": "module",
  "bin": {
    "jpglens-mcp": "./dist/index.js",
    "jpglens-mcp-sse": "./dist/sse.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sse": {
      "types": "./dist/sse.d.ts",
      "default": "./dist/sse.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "dev:sse": "tsx src/sse.ts",
    "test": "node ./scripts/smoke-test.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "zod": "^3.23.8",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "express": "^4.19.2",
    "adm-zip": "^0.5.10",
    "cors": "^2.8.5"
  },
  "optionalDependencies": {
    "@playwright/test": "^1.46.0",
    "jpglens": "^1.0.0",
    "@aws-sdk/client-s3": "^3.600.0"
  },
  "devDependencies": {
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "@types/node": "^20.14.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  }
}